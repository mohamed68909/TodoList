@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

            <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h2 class="fw-bold mb-0"><i class="bi bi-box-arrow-in-left ms-2"></i> تسجيل الدخول</h2>
                <p class="mb-0 mt-2 text-white-50">أهلاً بعودتك! يرجى إدخال بياناتك</p>
            </div>

            <div class="card-body p-4">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-muted"><i class="bi bi-envelope ms-1"></i> البريد الإلكتروني</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="input-group mb-3">
                        <div class="form-floating flex-grow-1">
                            <input asp-for="Input.Password" id="loginPassword" class="form-control rounded-end-0" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="text-muted"><i class="bi bi-lock ms-1"></i> كلمة المرور</label>
                        </div>
                        <span class="input-group-text bg-white border-start-0" style="cursor: pointer;" onclick="togglePassword('loginPassword', 'loginEye')">
                            <i id="loginEye" class="bi bi-eye text-primary"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label text-secondary" asp-for="Input.RememberMe">
                                تذكرني؟
                            </label>
                        </div>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none small text-primary">نسيت كلمة المرور؟</a>
                    </div>

                    <div class="d-grid gap-2">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold"
                                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                            دخول
                        </button>
                    </div>

                    <hr class="my-4 text-muted">

                    <div class="text-center">
                        <p class="text-muted mb-2">ليس لديك حساب؟</p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-primary rounded-pill w-100">
                            إنشاء حساب جديد
                        </a>

                        <div class="mt-3">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-muted small text-decoration-none">
                                لم يصلك كود التفعيل؟
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="mt-4 text-center">
                <hr />
                <h5 class="text-muted mb-3">أو قم بالدخول بواسطة</h5>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex justify-content-center gap-2">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-dark" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                            @provider.DisplayName
                        </button>
                    }
                </form>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function togglePassword(inputId, iconId) {
            var input = document.getElementById(inputId);
            var icon = document.getElementById(iconId);

            if (input.type === "password") {
                input.type = "text"; // إظهار الباسورد
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash"); // تغيير الأيقونة لعين مشطوبة
            } else {
                input.type = "password"; // إخفاء الباسورد
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye"); // إرجاع أيقونة العين
            }
        }
    </script>
}