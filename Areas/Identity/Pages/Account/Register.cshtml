@page
@model RegisterModel
@{
    ViewData["Title"] = "إنشاء حساب جديد";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

            <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h2 class="fw-bold mb-0">
                    <i class="bi bi-person-plus-fill ms-2"></i> إنشاء حساب جديد
                </h2>
                <p class="mb-0 mt-2 text-white-50">انضم إلينا وابدأ في تنظيم مهامك اليوم</p>
            </div>

            <div class="card-body p-4">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-muted"><i class="bi bi-envelope ms-1"></i> البريد الإلكتروني</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="input-group mb-3">
                        <div class="form-floating flex-grow-1">
                            <input asp-for="Input.Password" id="registerPass" class="form-control rounded-end-0" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="text-muted"><i class="bi bi-lock ms-1"></i> كلمة المرور</label>
                        </div>
                        <span class="input-group-text bg-white border-start-0" style="cursor: pointer;" onclick="togglePassword('registerPass', 'regEye1')">
                            <i id="regEye1" class="bi bi-eye text-primary"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small mb-3 d-block"></span>

                    <div class="input-group mb-3">
                        <div class="form-floating flex-grow-1">
                            <input asp-for="Input.ConfirmPassword" id="registerConfirm" class="form-control rounded-end-0" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword" class="text-muted"><i class="bi bi-check-circle ms-1"></i> تأكيد كلمة المرور</label>
                        </div>
                        <span class="input-group-text bg-white border-start-0" style="cursor: pointer;" onclick="togglePassword('registerConfirm', 'regEye2')">
                            <i id="regEye2" class="bi bi-eye text-primary"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>

                    <div class="d-grid gap-2 mt-4">
                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold"
                                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                            تسجيل الحساب
                        </button>
                    </div>

                    <hr class="my-4 text-muted">

                    <div class="text-center">
                        <p class="text-muted mb-2">لديك حساب بالفعل؟</p>
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-primary rounded-pill w-100">
                            تسجيل الدخول
                        </a>
                    </div>
                </form>
            </div>
        </div>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="mt-4 text-center">
                <hr />
                <h5 class="text-muted mb-3">أو سجل باستخدام</h5>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex justify-content-center gap-2">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-dark" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                            @provider.DisplayName
                        </button>
                    }
                </form>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function togglePassword(inputId, iconId) {
            var input = document.getElementById(inputId);
            var icon = document.getElementById(iconId);

            if (input.type === "password") {
                input.type = "text"; // إظهار الباسورد
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash"); // تغيير الأيقونة لعين مشطوبة
            } else {
                input.type = "password"; // إخفاء الباسورد
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye"); // إرجاع أيقونة العين
            }
        }
    </script>
}