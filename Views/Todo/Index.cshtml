@model IEnumerable<TodoList.Models.TodoItem>
@{
    ViewData["Title"] = "أجندة المهام";
    DateTime currentDate = ViewBag.CurrentDate;
}

<div class="row justify-content-center">
    <div class="col-md-8">

        <div class="card shadow-sm border-0 rounded-4 mb-4 overflow-hidden">
            <div class="card-body p-3 d-flex justify-content-between align-items-center bg-white">
                <a asp-action="Index" asp-route-day="@currentDate.AddDays(-1).ToString("yyyy-MM-dd")"
                   class="btn btn-light rounded-circle shadow-sm" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;">
                    <i class="bi bi-chevron-right text-primary"></i>
                </a>

                <div class="text-center">
                    <h4 class="fw-bold m-0" style="color: #4a5568;">
                        @currentDate.ToString("dddd, dd MMMM")
                    </h4>
                    <span class="text-muted small">@currentDate.ToString("yyyy")</span>
                    @if (currentDate.Date == DateTime.Today)
                    {
                        <span class="badge rounded-pill ms-2 px-3"
                              style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); vertical-align: middle;">
                            اليوم
                        </span>
                    }
                </div>

                <a asp-action="Index" asp-route-day="@currentDate.AddDays(1).ToString("yyyy-MM-dd")"
                   class="btn btn-light rounded-circle shadow-sm" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;">
                    <i class="bi bi-chevron-left text-primary"></i>
                </a>
            </div>

            <div class="progress" style="height: 6px; border-radius: 0;">
                <div class="progress-bar" role="progressbar"
                     style="width: @ViewBag.Percent%; background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);"
                     aria-valuenow="@ViewBag.Percent" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>

        <form asp-action="Create" method="post" class="position-relative mb-4">
            <input type="text" name="title" class="form-control form-control-lg rounded-pill shadow-sm ps-4 pe-5 border-0 py-3"
                   placeholder="✨ ماذا تريد أن تنجز اليوم؟" required autocomplete="off" />

            <input type="hidden" name="taskDate" value="@currentDate.ToString("yyyy-MM-dd")" />

            <button type="submit" class="btn btn-primary rounded-circle position-absolute top-50 translate-middle-y shadow-sm"
                    style="left: 10px; width: 45px; height: 45px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                <i class="bi bi-plus-lg fs-4"></i>
            </button>
        </form>

        <div class="d-flex flex-column gap-3">
            @foreach (var item in Model)
            {
                <div class="card border-0 shadow-sm rounded-3 overflow-hidden task-card @(item.IsDone ? "bg-light opacity-75" : "bg-white")" style="transition: transform 0.2s;">
                    <div class="card-body p-3 d-flex align-items-center justify-content-between">

                        <div class="d-flex align-items-center gap-3">
                            <a href="@Url.Action("Toggle", new { id = item.Id })?returnDate=@currentDate.ToString("yyyy-MM-dd")"
                               class="text-decoration-none d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
                                @if (item.IsDone)
                                {
                                    <i class="bi bi-check-circle-fill fs-3 text-success"></i>
                                }
                                else
                                {
                                    <i class="bi bi-circle fs-3 text-secondary hover-primary"></i>
                                }
                            </a>

                            <span class="fs-5 @(item.IsDone ? "text-decoration-line-through text-muted" : "fw-bold text-dark")">
                                @item.Title
                            </span>
                        </div>

                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm border-0 rounded-circle"
                           style="width: 35px; height: 35px; display: flex; align-items: center; justify-content: center;"
                           onclick="return confirm('هل أنت متأكد من حذف هذه المهمة؟')">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="text-center mt-5">
                <div class="mb-3 text-muted opacity-50">
                    <i class="bi bi-clipboard-check" style="font-size: 5rem;"></i>
                </div>
                <h4 class="text-muted fw-bold">يومك فارغ!</h4>
                <p class="text-muted">ابدأ بإضافة مهام جديدة لتنظيم وقتك.</p>
            </div>
        }
    </div>
</div>

<style>
    /* تأثير بسيط عند الوقوف على المهمة */
    .task-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.05) !important;
    }

    .hover-primary:hover {
        color: #667eea !important;
    }
</style>