@model IEnumerable<TodoList.Models.TodoItem>
@{
    ViewData["Title"] = "أجندة المهام";
    DateTime currentDate = ViewBag.CurrentDate;
    string mode = ViewBag.Mode;
}

<div class="container mt-5" style="max-width:720px">

    <!-- Tabs -->
    <div class="btn-group w-100 mb-4 shadow-sm rounded-pill overflow-hidden">
        <a asp-action="Index" asp-route-mode="daily"
           class="btn @(mode == "daily" ? "btn-primary" : "btn-light") fw-bold">
            📅 يومي
        </a>
        <a asp-action="Index" asp-route-mode="weekly"
           class="btn @(mode == "weekly" ? "btn-primary" : "btn-light") fw-bold">
            🗓 أسبوعي
        </a>
        <a asp-action="Index" asp-route-mode="monthly"
           class="btn @(mode == "monthly" ? "btn-primary" : "btn-light") fw-bold">
            📆 شهري
        </a>
    </div>

    <!-- Header -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body text-center py-4">
            <h4 class="fw-bold mb-1">@currentDate.ToString("dddd, dd MMMM")</h4>
            <small class="text-muted">@currentDate.ToString("yyyy")</small>

            <div class="progress mt-3 rounded-pill" style="height:6px">
                <div class="progress-bar bg-success"
                     style="width:@ViewBag.Percent%">
                </div>
            </div>

            <small class="text-muted mt-2 d-block">
                @ViewBag.Completed / @ViewBag.Total مكتملة
            </small>
        </div>
    </div>

    <!-- Add Task -->
    <form asp-action="Create" method="post" class="position-relative mb-4">
        <input type="text" name="title"
               class="form-control form-control-lg rounded-pill ps-4 pe-5 shadow-sm"
               placeholder="✨ أضف مهمة جديدة..."
               required />

        <input type="hidden" name="taskDate" value="@currentDate.ToString("yyyy-MM-dd")" />
        <input type="hidden" name="mode" value="@mode" />

        <button type="submit"
                class="btn btn-primary rounded-circle position-absolute top-50 translate-middle-y"
                style="left:8px;width:42px;height:42px">
            +
        </button>
    </form>

    <!-- Tasks -->
    <div class="d-flex flex-column gap-3">
        @foreach (var item in Model)
        {
            <div class="card border-0 shadow-sm rounded-4 task-card @(item.IsDone ? "opacity-75" : "")">
                <div class="card-body d-flex justify-content-between align-items-center">

                    <div class="d-flex align-items-center gap-3">
                        <a href="@Url.Action("Toggle", new { id = item.Id, returnDate = currentDate, mode = mode })"
                           class="fs-4 text-decoration-none">
                            @(item.IsDone ? "✅" : "⭕")
                        </a>

                        <span class="fs-5 @(item.IsDone ? "text-decoration-line-through text-muted" : "fw-bold")">
                            @item.Title
                        </span>
                    </div>

                    <a asp-action="Delete"
                       asp-route-id="@item.Id"
                       asp-route-day="@currentDate"
                       asp-route-mode="@mode"
                       class="btn btn-sm btn-outline-danger rounded-circle"
                       onclick="return confirm('هل أنت متأكد؟')">
                        🗑
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Empty -->
    @if (!Model.Any())
    {
        <div class="text-center mt-5 text-muted">
            <div style="font-size:4rem">📋</div>
            <h5 class="fw-bold">لا توجد مهام</h5>
            <p>ابدأ بإضافة مهامك الآن</p>
        </div>
    }
</div>

<style>
    body {
        background: #f7f8fc;
    }

    .task-card {
        transition: all .2s ease;
    }

        .task-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.08) !important;
        }
</style>
