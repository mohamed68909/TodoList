@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav align-items-center gap-2">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-white font-weight-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="إدارة حسابي">
                <i class="bi bi-person-circle ms-1"></i> مرحباً، @UserManager.GetUserName(User)
            </a>
        </li>

        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Todo", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white border-0" style="text-decoration: none;">
                    <i class="bi bi-box-arrow-left ms-1"></i> خروج
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus ms-1"></i> إنشاء حساب
            </a>
        </li>

        <li class="nav-item">
            <a class="btn btn-light text-primary fw-bold px-3 rounded-pill" id="login" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-left ms-1"></i> دخول
            </a>
        </li>
    }
</ul>